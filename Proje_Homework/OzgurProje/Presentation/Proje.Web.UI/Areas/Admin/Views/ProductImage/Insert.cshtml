@model CreateProductImageViewModel

@{
    ViewData["Title"] = "Insert";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Ürün Resmi Ekle</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form form asp-controller="ProductImage" asp-action="Insert" method="post" enctype="multipart/form-data">
        <div class="card-body">
            <div class="form-group">
                <label>Revision</label>
                <input asp-for="Revision" class="form-control" type="text" placeholder="Revision *">
            </div>
            <div class="form-group">
                <label>Ürün Id'si'</label>
                <select asp-for="ProductId" asp-items="@ViewBag.Products" class="form-control">
                    <option>Please select Products..</option>
                </select>
            </div>
            <div class="form-group">
                <label>Revision</label>
                <input asp-for="SortOrder" class="form-control" type="text" placeholder="SortOrder *">
            </div>
            <div class="form-group">
                <label for="exampleInputFile">File input</label>
                <div class="input-group">
                    <div class="custom-file">
                        <input class="form-control" type="file" name="files">
                    </div>
                    <div class="input-group-append">
                        <span class="input-group-text">Upload</span>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-controller="ProductImage" asp-action="Index" class="btn btn-danger">Çıkış</a>
        </div>
    </form>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["Message"]
        </div>
    }
</div>



@section scripts{
    <!-- bs-custom-file-input -->
    <script src="~/admin/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>

    <script>
        $(function () {
            bsCustomFileInput.init();
        });
    </script>
}
