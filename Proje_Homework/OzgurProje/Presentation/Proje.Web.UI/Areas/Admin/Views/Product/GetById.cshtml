@model ProductViewModel


@{   
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
    <link href="Content/bootstrap.min.css" rel="stylesheet" />
    @*product details*@
    <link href="~/blog/css/bootstrap.min.css" rel="stylesheet" />
    <style type="text/css">
        #smallImage {
            width: 70px;
            height: 70px;
            margin-right: 15px;
            border: 1px solid #800000;
            border-radius: 15px;
            box-shadow: 10px 10px 6px -1px rgba(0,0,0,0.72);
            -webkit-box-shadow: 10px 10px 6px -1px rgba(0,0,0,0.72);
            -moz-box-shadow: 10px 10px 6px -1px rgba(0,0,0,0.72);
            transition: 300ms ease-out;
        }

        #bigImage {
            width: 200px;
            height: 200px;
            margin-right: 15px;
            border: 1px solid #800000;
            border-radius: 15px;
            box-shadow: 10px 10px 6px -1px rgba(0,0,0,0.72);
            -webkit-box-shadow: 10px 10px 6px -1px rgba(0,0,0,0.72);
            -moz-box-shadow: 10px 10px 6px -1px rgba(0,0,0,0.72);
            transition: 300ms ease-out;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row" style="margin-top:50px;">
            <div id="fotograflar" class="col-lg-12 col-md-6">
                @if (Model.ProductImages != null)
                {
                    @foreach (var item in Model.ProductImages)
                    {
                        <img id="smallImage" src="@item.FileName" />
                    }
                }

            </div>
        </div>
        <div id="acilanBox" style="margin-top: 50px; ">

        </div>
        <br />
        <div class="card-body">
            <div class="form-group">
                <label>Ürün Adı : </label>
                <label>@Model.ProductName</label>
            </div>
           
            <div class="form-group">
                <label>Alış Fiyatı</label>
                <label>@Model.BuyingPrice TL.</label>
            </div>
            <div class="form-group">
                <label>Önerilen Fiyatı : </label>
                <label>@Model.Price1 TL.</label>
            </div>
            <div class="form-group">
                <label>Garanti Süresi(Yıl Olarak) : </label>
                <label>@Model.Warranty</label>
            </div>
          
            <div class="form-group">
                <label>Stok Miktarı : </label>
                <label>@Model.StockAmount</label>
            </div>
           
            <div class="form-group">
                <label>Distribütör : </label>
                <label>@Model.Distributor</label>
            </div>
            <div class="form-group">
                <label>Hediye: </label>
                <label>@Model.Gift</label>
            </div>
           
            <div class="form-group">
                <label>Kısa Açıklama</label>
                <label>@Model.ShortDetails</label>
            </div>
          
            <div class="form-group">
                <label>Marka Id</label>
                <label>@Model.BrandId</label>
            </div>
            <div class="form-group">
                <label>Kategori Id</label>
                <label>@Model.CategoryId</label>
            </div>
        </div>
        <!-- /.card-body -->      

        <hr />
        <div class="box-head">
            <a asp-controller="Product" asp-action="Index" class="btn btn-danger">Çıkış</a>
        </div>

    </div>
    

    <script src="~/blog/js/jquery.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("div#fotograflar img").mouseenter(function () {
                //console.log($(this).attr('src'));
                $("#acilanBox").css("display", "none");
                var resimYolu = $(this).attr('src');
                $("#acilanBox").html('<img id="bigImage" src="' + resimYolu + '" />').fadeIn("slow");
            });
        });
    </script>

</body>
</html>





