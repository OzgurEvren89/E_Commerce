
@model CreateShippingCompanyViewModel

@{
    ViewData["Title"] = "Insert";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Kargo Firması Ekle</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form form asp-controller="ShippingCompany" asp-action="Insert" method="post">
        <div class="card-body">
            <div class="form-group">
                <label>Kargo Şirketi Adı</label>
                <input asp-for="Name" class="form-control" type="text" placeholder="ShippingCompany Name *">
            </div>
            <div class="form-group">
                <label>Sabit Ücret</label>
                <input asp-for="ExtraPrice" class="form-control" type="text" placeholder="ExtraPrice *">
            </div>
            <div class="form-group">
                <label>Kilogram Ücreti</label>
                <input asp-for="ExtraVolumetricWeightPrice" class="form-control" type="text" placeholder="ExtraVolumetricWeightPrice *">
            </div>
            <div class="form-group">
                <label>Ücretsiz Kargo Sınır Fiyatı</label>
                <input asp-for="FreeShipmentOrderPrice" class="form-control" type="text" placeholder="FreeShipmentOrderPrice *">
            </div>

        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-controller="ShippingCompany" asp-action="Index" class="btn btn-danger">Çıkış</a>
        </div>
    </form>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["Message"]
        </div>
    }
</div>



@section scripts{
    <!-- bs-custom-file-input -->
    <script src="~/admin/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>

    <script>
        $(function () {
            bsCustomFileInput.init();
        });
    </script>
}


