
@model CreateUserViewModel

@{
    ViewData["Title"] = "Insert";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Ürün Resmi Ekle</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form asp-controller="User" asp-action="Insert" method="post" enctype="multipart/form-data">
        <div class="card-body">
            <div class="form-group">
                <label>Adı</label>
                <input asp-for="FirstName" class="form-control" type="text" placeholder="First Name *">
            </div>
            <div class="form-group">
                <label>Soy Adı</label>
                <input asp-for="LastName" class="form-control" type="text" placeholder="First Name *">
            </div>
            <div class="form-group">
                <label>Email</label>
                <input asp-for="Email" class="form-control" type="text" placeholder="Email Address *">
            </div>
            <div class="form-group">
                <label>Kullanıcı Rolü</label>
                <input asp-for="Title" class="form-control" type="text" placeholder="Title *">
            </div>
            <div class="form-group">
                <label>Şifre</label>
                <input asp-for="Password" class="form-control" type="text" placeholder="Password *">
            </div>            
            <div class="form-group">
                <label for="exampleInputFile">File input</label>
                <div class="input-group">
                    <div class="custom-file">
                        <input class="form-control" type="file" name="files">
                    </div>
                    <div class="input-group-append">
                        <span class="input-group-text">Upload</span>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-controller="User" asp-action="Index" class="btn btn-danger">Çıkış</a>
        </div>
    </form>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["Message"]
        </div>
    }
</div>



@section scripts{
    <!-- bs-custom-file-input -->
    <script src="~/admin/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>

    <script>
        $(function () {
            bsCustomFileInput.init();
        });
    </script>
}
