
@model UpdateBrandViewModel

@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Marka Ekle</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form form asp-controller="Brand" asp-action="Update" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="card-body">
            <div class="form-group">
                <label>Marka Adı</label>
                <input asp-for="BrandName" class="form-control" type="text" placeholder="BrandName *">
            </div>
            <div class="form-group">
                <label>Açıklama</label>
                <input asp-for="Description" class="form-control" type="text" placeholder="Description *">
            </div>

        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-controller="Brand" asp-action="Index" class="btn btn-danger">Çıkış</a>
        </div>
    </form>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["Message"]
        </div>
    }
</div>



@section scripts{
    <!-- bs-custom-file-input -->
    <script src="~/admin/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>

    <script>
        $(function () {
            bsCustomFileInput.init();
        });
    </script>
}


