
@model CreateInstallmentRateViewModel

@{
    ViewData["Title"] = "Insert";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Taksit Oranı Ekle</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form form asp-controller="InstallmentRate" asp-action="Insert" method="post">
        <div class="card-body">
            <div class="form-group">
                <label>Installment</label>
                <input asp-for="Installment" class="form-control" type="text" placeholder="Taksit Sayısı *">
            </div>
            <div class="form-group">
                <label>Rate</label>
                <input asp-for="Rate" class="form-control" type="text" placeholder="Faiz Oranı *">
            </div>
            <div class="form-group">
                <label>PaymentGateway Id</label>
                @if (@ViewBag.PaymentGateways != null)
                {
                    <select asp-for="PaymentGatewayId" asp-items="@ViewBag.PaymentGateways" class="form-control">
                        <option>Please select PaymentGateway..</option>
                    </select>
                }
                else
                {
                    <label>Taksit Oranı Girebileceğiniz Herhangi Bir Banka Bulunmamaktadır.</label>
                }
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-controller="InstallmentRate" asp-action="Index" class="btn btn-danger">Çıkış</a>
        </div>
    </form>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["Message"]
        </div>
    }
</div>



@section scripts{
    <!-- bs-custom-file-input -->
    <script src="~/admin/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>

    <script>
        $(function () {
            bsCustomFileInput.init();
        });
    </script>
}


