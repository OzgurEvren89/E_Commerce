
@model CreateCartItemViewModel

@{
    ViewData["Title"] = "Insert";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Sepet Kalemi Ekle</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form form asp-controller="CartItem" asp-action="Insert" method="post">
        <div class="card-body">
            <div class="form-group">
                <label>CartItem</label>
                <input asp-for="Quantity" class="form-control" type="text" placeholder="Lütfen Ürün Adedini Giriniz...  *">
            </div>           
            <div class="form-group">
                <label>SpecGroupId</label>
                <select asp-for="ProductId" asp-items="@ViewBag.Products" class="form-control">
                    <option>Lütfen Ürün  Id'sini Seçiniz...</option>
                </select>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-controller="CartItem" asp-action="Index" class="btn btn-danger">Çıkış</a>
        </div>
    </form>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["Message"]
        </div>
    }
</div>



@section scripts{
    <!-- bs-custom-file-input -->
    <script src="~/admin/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>

    <script>
        $(function () {
            bsCustomFileInput.init();
        });
    </script>
}


