

@model UpdateProductDetailViewModel


@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Ürün Açıklamasnı Güncelle</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form form asp-controller="ProductDetail" asp-action="Update" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="card-body">
            <div class="form-group">
                <label>Başlık</label>
                <input asp-for="Title" class="form-control" type="text" placeholder="Başlık *">
            </div>
            <div class="form-group">
                <label>Ürün Açıklaması</label>
                <input asp-for="Details" class="form-control" type="text" placeholder="Ürün Açıklaması *">
            </div>
            <div class="form-group">
                <label>Ürün </label>
                <select asp-for="ProductId" asp-items="@ViewBag.Products" class="form-control">
                    <option>Please select Products..</option>
                </select>
            </div>
        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-controller="ProductDetail" asp-action="Index" class="btn btn-danger">Çıkış</a>
        </div>

    </form>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["Message"]
        </div>
    }
</div>



@section scripts{
    <!-- bs-custom-file-input -->
    <script src="~/admin/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>

    <script>
        $(function () {
            bsCustomFileInput.init();
        });
    </script>
}
