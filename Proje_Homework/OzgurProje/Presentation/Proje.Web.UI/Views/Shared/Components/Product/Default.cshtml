@model List<ProductViewModel>
@*<div class="col-sm-9 padding-right">*@
<div class="features_items">
    <!--features_items-->
    <h2 class="title text-center">Features Items</h2>
    @*---------------Tekrar eden Features Items--------------------*@

    @foreach (var item in Model)
    {
        //ilk resmi çekiyorum boş yada dolu
        ProductImageViewModel productImage = new ProductImageViewModel();
        productImage = item.ProductImages.FirstOrDefault();

        <div class="col-sm-4">
            <div class="product-image-wrapper">
                <div class="single-products">
                    <div class="productinfo text-center">
                        @if (productImage != null && !string.IsNullOrEmpty(productImage.FileName))
                        {
                            <img src="@productImage.FileName" alt="">
                        }
                        else
                        {
                            <img src="~/blog/images/cart/istockphoto-950862264-1024x1024.jpg" />
                        }
                    <h2>@item.Price1</h2>
                        <p>@item.ProductName</p>
                        <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Sepete Ekle</a>
                    </div>
                    <div class="product-overlay">                       
                        <div class="overlay-content">
                            <a asp-controller="Favourite" asp-action="Insert" asp-route-id="@item.Id" class="btn btn-primary">Favoriye Ekle</a>

                            <h2>@item.Price1</h2>

                            <p>@item.ProductName</p>
                            <a href="javascript:void(0);" class="add-to-cart">
                                <img class="btnCart" val="@item.Id.ToString()" width="40" height="40" src="~/blog/Images/cart/Shopping.png" data-toggle="tooltip" data-placement="right" title="Sepete Ekle" />
                            </a>
                            <a asp-controller="ProductDetail" asp-action="ProductDetails" asp-route-id="@item.Id" class="btn btn-primary">Ürüne Git</a>
                        </div>
                    </div>
                </div>
                <div class="choose">
                    <ul class="nav nav-pills nav-justified">
                        <li><a href="#"><i class="fa fa-plus-square"></i>Add to wishlist</a></li>
                        <li><a href="#"><i class="fa fa-plus-square"></i>Add to compare</a></li>
                    </ul>
                </div>
            </div>
        </div>
    }

    @*-------------------------------------------*@


</div><!--features_items-->

<div class="category-tab">
    <!--category-tab-->
    <div class="col-sm-12">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#tshirt" data-toggle="tab">T-Shirt</a></li>
            <li><a href="#blazers" data-toggle="tab">Blazers</a></li>
            <li><a href="#sunglass" data-toggle="tab">Sunglass</a></li>
            <li><a href="#kids" data-toggle="tab">Kids</a></li>
            <li><a href="#poloshirt" data-toggle="tab">Polo shirt</a></li>
        </ul>
    </div>
    <div class="tab-content">
        <div class="tab-pane fade active in" id="tshirt">


            @*-------------Tekrar eden tshirtler----------*@

            <div class="col-sm-3">
                <div class="product-image-wrapper">
                    <div class="single-products">
                        <div class="productinfo text-center">
                            <img src="images/home/gallery2.jpg" alt="">
                            <h2>$56</h2>
                            <p>t-shirt</p>
                            <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                        </div>

                    </div>
                </div>
            </div>

            @*----------------------------------------------------------*@
        </div>

        <div class="tab-pane fade" id="kids">

            @*-----------Tekrar Eden Kids------------------*@

            <div class="col-sm-3">
                <div class="product-image-wrapper">
                    <div class="single-products">
                        <div class="productinfo text-center">
                            <img src="images/home/gallery4.jpg" alt="">
                            <h2>$56</h2>
                            <p>Kids</p>
                            <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                        </div>

                    </div>
                </div>
            </div>


            @*------------------------------------------*@
        </div>

        <div class="tab-pane fade" id="poloshirt">

            @*----------------------------Tekrar Eden poloshirt---------------------------*@


            <div class="col-sm-3">
                <div class="product-image-wrapper">
                    <div class="single-products">
                        <div class="productinfo text-center">
                            <img src="images/home/gallery1.jpg" alt="">
                            <h2>$56</h2>
                            <p>POLO SHİRT</p>
                            <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                        </div>

                    </div>
                </div>
            </div>

            @*-------------------------------------------*@

        </div>
    </div>
</div><!--/category-tab-->

<div class="recommended_items">
    <!--recommended_items-->
    <h2 class="title text-center">recommended items</h2>

    <div id="recommended-item-carousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="item active">


                @*--------Tekrar Eden Carousel Items--------------*@


                <div class="col-sm-4">
                    <div class="product-image-wrapper">
                        <div class="single-products">
                            <div class="productinfo text-center">
                                <img src="images/home/recommend3.jpg" alt="">
                                <h2>$56</h2>
                                <p>CARAUSEL ITEM</p>
                                <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                            </div>

                        </div>
                    </div>
                </div>

                @*----------------------------------*@

            </div>
        </div>
        <a class="left recommended-item-control" href="#recommended-item-carousel" data-slide="prev">
            <i class="fa fa-angle-left"></i>
        </a>
        <a class="right recommended-item-control" href="#recommended-item-carousel" data-slide="next">
            <i class="fa fa-angle-right"></i>
        </a>
    </div>
</div><!--/recommended_items-->
@*</div>*@








