@model CreatePhoneNumberViewModel


<form id="frmMember" asp-action="PhoneInsert" asp-controller="Profile" method="post" data-ajax="true" data-ajax-method="Post" data-ajax-success="OnSuccess" novalidate="novalidate">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div>
        <label>Üye Telefon Numarası</label>
        <input asp-for="Number" class="form-control" type="text" placeholder="Telefon Numaranız *">
    </div>

    <div class="form-group">
        <label>Telefon Numarası Tipi</label>
        <select asp-for="PhoneNumberType" asp-items="@ViewBag.PhoneNumberType" class="form-control">
            <option>Numara Tipi Seçiniz..</option>
        </select>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
