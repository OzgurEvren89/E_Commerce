@model LoginViewModel

@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Login | E-Shopper</title>
    <link href="~/blog/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/blog/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/blog/css/prettyPhoto.css" rel="stylesheet">
    <link href="~/blog/css/price-range.css" rel="stylesheet">
    <link href="~/blog/css/animate.css" rel="stylesheet">
    <link href="~/blog/css/main.css" rel="stylesheet">
    <link href="~/blog/css/responsive.css" rel="stylesheet">
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->
    <link rel="shortcut icon" href="images/ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/blog/images/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/blog/images/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/blog/images/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="~/blog/images/ico/apple-touch-icon-57-precomposed.png">
</head><!--/head-->

<body>

    <section id="form">
        <!--form-->
        <div class="container">
            <div class="row">
                <div class="col-sm-4 col-sm-offset-1">
                    <div class="login-form">
                        <!--login form-->
                        <h2>Hesabınıza Giriş Yapınız</h2>
                        <form asp-controller="Account" asp-action="Login" method="post">

                            <input asp-for="Email" class="form-control" type="text" placeholder="User ID / Email" />
                            <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
                            <span>
                                <input type="checkbox" class="checkbox">
                                Keep me signed in
                            </span>
                            <button type="submit" class="btn btn-default">Giriş Yap</button>
                        </form>
                    </div><!--/login form-->
                </div>
                <div class="col-sm-1">
                    <h2 class="or">OR</h2>
                </div>
                <div class="col-sm-4">
                    <div class="signup-form">
                        <!--sign up form-->
                        <h2>Yeni Kullanıcı Girişi!</h2>    
                        <a style="color:orange" asp-controller="Account" asp-action="InsertUser" title=""><i class="fa fa-lock" ></i> Kayıt Ol</a>                      
                    </div><!--/sign up form-->
                </div>
            </div>

            @if (TempData["Message"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @TempData["Message"]
                </div>
            }
        </div>
    </section><!--/form-->



    <script src="~/blog/js/jquery.js"></script>
    <script src="~/blog/js/price-range.js"></script>
    <script src="~/blog/js/jquery.scrollUp.min.js"></script>
    <script src="~/blog/js/bootstrap.min.js"></script>
    <script src="~/blog/js/jquery.prettyPhoto.js"></script>
    <script src="~/blog/js/main.js"></script>
</body>
</html>