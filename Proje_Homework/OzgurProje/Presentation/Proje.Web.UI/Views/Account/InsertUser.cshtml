@model CreateUserVM

@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Login | E-Shopper</title>
    <link href="~/blog/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/blog/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/blog/css/prettyPhoto.css" rel="stylesheet">
    <link href="~/blog/css/price-range.css" rel="stylesheet">
    <link href="~/blog/css/animate.css" rel="stylesheet">
    <link href="~/blog/css/main.css" rel="stylesheet">
    <link href="~/blog/css/responsive.css" rel="stylesheet">
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->
    <link rel="shortcut icon" href="images/ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/blog/images/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/blog/images/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/blog/images/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="~/blog/images/ico/apple-touch-icon-57-precomposed.png">
</head><!--/head-->

<body>

    <div class="content-body">
        <div class="row justify-content-between align-items-center mb-10">
            <div class="col-12 col-lg-auto mb-20">
                <div class="page-heading">
                    <h3>Blog <span>/ Add</span></h3>
                </div>
            </div>
        </div>
        <div class="add-edit-product-wrap col-12">
            <div class="add-edit-product-form">
                <form asp-controller="Account" asp-action="InsertUser" method="post" enctype="multipart/form-data">
                    <h4 class="title">About User</h4>
                    <div class="row">
                        <div class="col-lg-12 col-12 mb-30">
                            <input asp-for="FirstName" class="form-control" type="text" placeholder="First Name *">
                        </div>
                        <br />
                        <div class="col-lg-12 col-12 mb-30">
                            <input asp-for="LastName" class="form-control" type="text" placeholder="Last Name *">
                        </div>
                        <br />
                        <div class="col-lg-12 col-12 mb-30">
                            <input asp-for="Email" class="form-control" type="text" placeholder="Email Address *">
                        </div>
                        <br />
                        <div class="col-lg-12 col-12 mb-30">
                            <input asp-for="Password" class="form-control" type="text" placeholder="Password *">
                        </div>
                        <br />
                        <div class="col-lg-12 col-12 mb-30">
                            <input class="form-control" type="file" name="files">
                        </div>
                        @*<div>
                <button type="submit" class="btn btn-default">Login</button>
            </div>*@
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                    @*<div class="row">
                        <div class="d-flex flex-wrap justify-content-end col mbn-10">
                            <button class="button button-outline button-primary mb-10 ml-10 mr-0">Save</button>
                        </div>
                    </div>*@
                </form>
            </div>
        </div>
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["Message"]
            </div>
        }
    </div>



    <script src="~/blog/js/jquery.js"></script>
    <script src="~/blog/js/price-range.js"></script>
    <script src="~/blog/js/jquery.scrollUp.min.js"></script>
    <script src="~/blog/js/bootstrap.min.js"></script>
    <script src="~/blog/js/jquery.prettyPhoto.js"></script>
    <script src="~/blog/js/main.js"></script>
</body>
</html>
